      <section class="section">
        <div class="container my-5">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header text-center">
                  <h3 class="mb-0">Калькулятор стоимости заказа</h3>
                </div>
                <div class="card-body">
                  <form>
                    <div class="mb-3">
                      <label for="serviceType" class="form-label"
                        >Выберите тип услуги:</label
                      >
                      <select class="form-select" id="serviceType">
                        <option value="landing">Одностраничный сайт</option>
                        <option value="corporate">Корпоративный сайт</option>
                        <option value="ecommerce">Интернет-магазин</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="pageCount" class="form-label"
                        >Количество страниц:</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        id="pageCount"
                        min="1"
                        value="1"
                      />
                    </div>
                    <div class="mb-3 form-check">
                      <input
                        type="checkbox"
                        class="form-check-input"
                        id="responsiveDesign"
                      />
                      <label class="form-check-label" for="responsiveDesign"
                        >Адаптивный дизайн</label
                      >
                    </div>
                    <div class="mb-3">
                      <label for="totalCost" class="form-label"
                        >Итоговая стоимость:</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="totalCost"
                        readonly
                      />
                    </div>
                    <div class="d-grid gap-2">
                      <button
                        type="button"
                        class="btn btn-primary"
                        onclick="calculateCost()"
                      >
                        Рассчитать стоимость
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
